<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.coremedia.blueprint</groupId>
    <artifactId>server</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>

  <artifactId>workflow-server-webapp</artifactId>
  <packaging>war</packaging>

  <description>
    To start the workflow-server-webapp run: mvn tomcat7:run-war
  </description>

  <properties>
    <development-properties.dir>${project.basedir}/../../../workspace-configuration/development-properties/default</development-properties.dir>
    <logging-properties.dir>${project.basedir}/../../../workspace-configuration/logging</logging-properties.dir>
    <propertieslocations>classpath:/workflow-server.properties</propertieslocations>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>workflowserver-blueprint-component</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>workflowserver-blueprint-config</artifactId>
      <version>${project.version}</version>
      <type>coremedia-application</type>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

  <build>
    <finalName>workflow</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <nonFilteredFileExtensions>
            <fileExtension>zip</fileExtension>
          </nonFilteredFileExtensions>
          <overlays>
            <overlay>
              <groupId>${project.groupId}</groupId>
              <artifactId>workflowserver-blueprint-config</artifactId>
              <type>coremedia-application</type>
              <targetPath>WEB-INF</targetPath>
            </overlay>
          </overlays>
        </configuration>
      </plugin>

      <!--
        invoke "mvn tomcat7:run-war" for running this webapp locally but make sure that you run mvn:package first
      -->
      <plugin>
        <groupId>org.apache.tomcat.maven</groupId>
        <artifactId>tomcat7-maven-plugin</artifactId>
        <configuration>
          <path>/${project.build.finalName}</path>
          <port>40380</port>
          <systemProperties>
            <propertieslocations>${propertieslocations}</propertieslocations>
          </systemProperties>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>in-memory</id>
      <properties>
        <development-properties.dir>${project.basedir}/../../../workspace-configuration/development-properties/in-memory</development-properties.dir>
      </properties>
    </profile>
  </profiles>

</project>
